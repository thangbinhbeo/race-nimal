<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="1449dp"
        android:layout_height="2652dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.314"
        app:srcCompat="@drawable/oke" />

    <TextView
        android:id="@+id/textViewLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trace - nimal"
        android:textSize="50sp"
        android:layout_marginTop="250dp"
        android:textColor="@color/white"
        android:fontFamily="@font/logo_font"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:shadowColor="#FF000000"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="10"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="100dp"/>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewLogo">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="300dp"
            android:layout_height="43dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="43dp"
                android:layout_height="53dp"
                app:srcCompat="@mipmap/user_icon_foreground" />

            <EditText
                android:id="@+id/editTextUserName"
                android:layout_width="213dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:ems="10"
                android:fontFamily="@font/body_font_bold"
                android:hint="User name"
                android:inputType="text"
                android:padding="5dp"
                android:textColor="#BABABA"
                android:textColorHint="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <ImageView
                android:id="@+id/ok"
                android:layout_width="43dp"
                android:layout_height="50dp"
                app:srcCompat="@mipmap/password_foreground" />

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="212dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:ems="10"
                android:fontFamily="@font/body_font_bold"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="5dp"
                android:textColor="#BABABA"
                android:textColorHint="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iconEye"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/password_eye_close_foreground" />
        </LinearLayout>
    </LinearLayout>



    <TextView
        android:id="@+id/textView2"
        android:fontFamily="@font/body_font_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CopyRight Â© 2024 Trace-nimal."
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_marginBottom="15dp"
        android:id="@+id/textView3"
        android:fontFamily="@font/body_font_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Right Reserves."
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="8dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:id="@+id/fakeButtonLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fake_button"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:paddingHorizontal="70dp"
            android:text="LOG IN"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/body_font_bold"
            android:textSize="18sp" />
    </androidx.cardview.widget.CardView>



    </androidx.constraintlayout.widget.ConstraintLayout>